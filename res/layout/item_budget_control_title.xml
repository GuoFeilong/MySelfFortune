<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/conmmd_background"
    android:minHeight="45dp" >

    <TextView
        android:id="@+id/tv_budget_control_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:text="@string/budget_item_title"
        android:textColor="@color/conmmd_textcolor"
        android:textSize="@dimen/item_plan_childe_size" />

    <ImageView
        android:id="@+id/iv_budget_control_add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_budget_add"
        android:clickable="true" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_gv_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/conmmd_very_lightgray" >

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="@dimen/gridmenu_height"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <com.guofeilong.fortune.ui.ChangeColorIconView
                    android:id="@+id/cci_gridmenu_icon"
                    android:layout_width="@dimen/gridmenu_icon_height"
                    android:layout_height="@dimen/gridmenu_icon_height"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tv_gridview_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/cci_gridmenu_icon"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-5dp"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/graywhite"
                    android:textSize="14sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_alignParentBottom="true"
                android:background="@color/conmmd_line" />

            <ImageView
                android:id="@+id/iv_right_line"
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
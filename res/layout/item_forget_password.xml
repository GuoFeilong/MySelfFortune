<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_forget_password_height"
    android:background="@color/conmmd_lightgray" >

    <RelativeLayout
        android:id="@+id/rl_item_forget_password_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/conmmd_lightgray"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_forget_password_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="@string/item_new_password"
            android:textColor="@color/conmmd_textcolor"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_password_help"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/tv_forget_password_title"
            android:background="@drawable/bg_help_shape"
            android:gravity="center"
            android:textColor="@color/conmmd_black" />

        <EditText
            android:id="@+id/et_forget_password_value"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_forget_password_button_height"
            android:layout_below="@id/tv_forget_password_title"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/lv_bg_shape_new_style"
            android:gravity="center_vertical"
            android:inputType="textPassword"
            android:maxLength="30"
            android:paddingLeft="10dp"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/conmmd_textcolor"
            android:textColorHint="@color/conmmd_textcolor_t"
            android:textSize="@dimen/commond_titlebar_font_size_right" />
    </RelativeLayout>

</RelativeLayout>
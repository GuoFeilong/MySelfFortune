<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conmmd_darkgray" >

    <include
        android:id="@+id/activity_bank_card_include_commond_title"
        android:layout_width="match_parent"
        layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/activity_bank_card_include_commond_title"
        android:background="@color/conmmd_lightgray"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/activity_bank_card_rl_balance"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lv_balance_shape" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_bank_card_rl_cmb"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/lv_cmb_shape" >
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/activity_bank_card_rl_add_card"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="43dp"
            android:background="@color/white"
            android:clickable="true" >

            <ImageView
                android:id="@+id/im_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/bg_add_member" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="26dp"
                android:layout_toRightOf="@+id/im_add"
                android:gravity="center_vertical"
                android:text="@string/activity_bank_card_add_a_card"
                android:textColor="@color/conmmd_textcolor_s"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/iv_add_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/bg_next1" />
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conmmd_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_commond_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/activity_cur_month_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2/jun"
            android:textColor="@color/conmmd_textcolor"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/activity_cur_month_data"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="39.53MB"
            android:textColor="@color/data_usage_color_yellow"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/commond_line_height"
        android:background="@color/conmmd_line" />

    <ListView
        android:id="@+id/activity_cur_month_lv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:divider="@null"
        android:listSelector="@null"
        android:overScrollMode="never"
        android:scrollbars="none" >
    </ListView>

    <!--
    <ImageView
        android:id="@+id/ll_date"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_by_date_month"
        android:clickable="true"
        android:orientation="vertical" >
    </ImageView>
    -->

</LinearLayout>
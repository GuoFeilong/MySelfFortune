<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conmmd_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_commond_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="2" >

        <RelativeLayout
            android:id="@+id/rl_app_version_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:visibility="invisible" >

            <TextView
                android:id="@+id/tv_app_version"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="RTSS 1.5.1"
                android:textColor="@color/conmmd_textcolor_s"
                android:textSize="@dimen/set_left_title" />

            <TextView
                android:id="@+id/tv_app_version_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_app_version"
                android:layout_centerInParent="true"
                android:layout_marginTop="4dp"
                android:text="您的软件是最新版本"
                android:textColor="@color/conmmd_textcolor_s"
                android:textSize="@dimen/set_left_title" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>
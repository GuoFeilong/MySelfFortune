<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_gv_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/conmmd_very_lightgray" >

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="110dp"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" >

                <ImageView
                    android:id="@+id/iv_item_wallet"
                    android:layout_width="@dimen/gridmenu_icon_height"
                    android:layout_height="@dimen/gridmenu_icon_height"
                    android:layout_centerHorizontal="true"
                    android:background="@null" />

                <TextView
                    android:id="@+id/tv_item_wallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/iv_item_wallet"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="-5dp"
                    android:gravity="center"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/graywhite"
                    android:textSize="10sp" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/iv_bottom_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/conmmd_line" />

            <ImageView
                android:id="@+id/iv_right_line"
                android:layout_width="@dimen/commond_line_height"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
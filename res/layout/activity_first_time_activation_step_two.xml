<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conmmd_darkgray" >

    <include
        android:id="@+id/include_commond_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_commond_title"
        android:background="@color/conmmd_lightgray"
        android:orientation="vertical"
        android:weightSum="5" >

        <RelativeLayout
            android:id="@+id/rl_activation_otp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.95" >

            <include
                android:id="@+id/include_activation_otp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/item_forget_password_recent_otp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_activation_check_user_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.95" >

            <include
                android:id="@+id/include_activation_check_user_id"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/item_forget_password_recent_otp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_activation_new_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.95" >

            <include
                android:id="@+id/include_activation_new_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/item_forget_password" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_activation_confirmed_password"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.95" >

            <include
                android:id="@+id/include_rl_activation_confirmed_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                layout="@layout/item_forget_password" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:background="@color/conmmd_background" >

            <Button
                android:id="@+id/btn_activation_confirmed_password_submit"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/button_yellow_selector"
                android:text="@string/button_confirm"
                android:textColor="@color/conmmd_black"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/backgroud_rounded"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <LinearLayout
            android:id="@+id/ll_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_home_userbutton_selector"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:gravity="center_horizontal"
                android:text="ID"
                android:textColor="@color/conmmd_black"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/line_1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/conmmd_line" >
        </ImageView>

        <LinearLayout
            android:id="@+id/ll_pass_port"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_home_userbutton_selector"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:gravity="center_horizontal"
                android:text="Passport"
                android:textColor="@color/conmmd_black"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/line_2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/conmmd_line" >
        </ImageView>

        <LinearLayout
            android:id="@+id/ll_find_comment_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button_home_userbutton_selector"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="20dip"
                android:layout_marginRight="20dip"
                android:layout_marginTop="20dip"
                android:gravity="center_horizontal"
                android:text="Cancel"
                android:textColor="@color/conmmd_black"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
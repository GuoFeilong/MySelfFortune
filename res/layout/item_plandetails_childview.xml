<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conmmd_background"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/iv_recharge_gradient"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:background="@color/conmmd_background"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/pd_text_height" >

        <TextView
            android:id="@+id/packageDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:text=""
            android:textColor="@color/conmmd_textcolor"
            android:textSize="@dimen/pd_textsize" />

        <TextView
            android:id="@+id/detailValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/packageDetails"
            android:layout_alignParentRight="true"
            android:layout_marginRight="38dp"
            android:text=""
            android:textColor="@color/conmmd_textcolor_s"
            android:textSize="@dimen/pd_textsize"
            android:visibility="invisible" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/iv_header_plandetail_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/commond_line_height"
        android:background="@color/conmmd_line" />

</LinearLayout>
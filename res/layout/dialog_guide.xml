<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_guide_container"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/transparent" >

    <TextView
        android:id="@+id/tv_guide_finger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_fingers" />

    <TextView
        android:id="@+id/tv_guide_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_guide_finger"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-20dp"
        android:text="戳戳看!"
        android:textColor="@color/conmmd_textcolor"
        android:textSize="9sp" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_gv_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/conmmd_very_lightgray" >

    <RelativeLayout
        android:layout_width="180dp"
        android:layout_height="@dimen/gridmenu_height"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent" >

        <ImageView
            android:id="@+id/rl_asy_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <com.guofeilong.fortune.ui.view.WaterWaveLoadingView
            android:id="@+id/waterloading_asy_image"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" />
    </RelativeLayout>

</RelativeLayout>
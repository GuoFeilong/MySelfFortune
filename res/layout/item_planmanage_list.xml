<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conmmd_lightgray"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/manageplan_bg"
        
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/packagename"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:gravity="center_vertical"
                android:paddingLeft="5dp"
                android:text="Tariff 1"
                android:textColor="#B2BDC1"
                android:textSize="@dimen/packagename_textsize" />

            <RelativeLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_weight="10.95" >

                <Button
                    android:id="@+id/btn_price"
                    android:layout_width="70dp"
                    android:layout_height="25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/button_green_selector"
                    android:focusable="false"
                    android:paddingRight="0dip"
                    android:text="@string/manageplan_buy"
                    android:textColor="@color/conmmd_textcolor"
                    android:textSize="@dimen/button_textsize" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="2dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:background="@drawable/lvitem_manageplan_bg"
                android:gravity="center" >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="8dip"
                    android:text="â‚¬35.00"
                    android:textColor="#88C536"
                    android:textSize="@dimen/price_textsize" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/phone"
                            android:layout_width="@dimen/list_pic_width"
                            android:layout_height="@dimen/list_pic_height"
                            android:src="@drawable/phone" />

                        <TextView
                            android:id="@+id/amount_phone"
                            android:layout_width="@dimen/list_text_width"
                            android:layout_height="@dimen/list_text_height"
                            android:gravity="center"
                            android:text="1000"
                            android:textColor="@color/conmmd_textcolor"
                            android:textSize="@dimen/list_textsize" />

                        <ImageView
                            android:id="@+id/weixin"
                            android:layout_width="@dimen/list_pic_width"
                            android:layout_height="@dimen/list_pic_height"
                            android:src="@drawable/weixin" />

                        <TextView
                            android:id="@+id/amount_weixin"
                            android:layout_width="@dimen/list_text_width"
                            android:layout_height="@dimen/list_text_height"
                            android:gravity="center"
                            android:text="500"
                            android:textColor="@color/conmmd_textcolor"
                            android:textSize="@dimen/list_textsize" />

                        <ImageView
                            android:id="@+id/apn"
                            android:layout_width="@dimen/list_pic_width"
                            android:layout_height="@dimen/list_pic_height"
                            android:src="@drawable/apn" />

                        <TextView
                            android:id="@+id/amount_apn"
                            android:layout_width="@dimen/list_text_width"
                            android:layout_height="@dimen/list_text_height"
                            android:gravity="center"
                            android:paddingRight="5dip"
                            android:text="200"
                            android:textColor="@color/conmmd_textcolor"
                            android:textSize="@dimen/list_textsize" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/conmmd_darkgray" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center" >

                        <ImageView
                            android:id="@+id/wlan"
                            android:layout_width="@dimen/list_pic_width"
                            android:layout_height="@dimen/list_pic_height"
                            android:src="@drawable/wlan" />

                        <TextView
                            android:id="@+id/amount_wlan"
                            android:layout_width="@dimen/list_text_width"
                            android:layout_height="@dimen/list_text_height"
                            android:gravity="center"
                            android:text="100"
                            android:textColor="@color/conmmd_textcolor"
                            android:textSize="@dimen/list_textsize" />

                        <ImageView
                            android:id="@+id/sms"
                            android:layout_width="@dimen/list_pic_width"
                            android:layout_height="@dimen/list_pic_height"
                            android:src="@drawable/sms" />

                        <TextView
                            android:id="@+id/amount_sms"
                            android:layout_width="@dimen/list_text_width"
                            android:layout_height="@dimen/list_text_height"
                            android:gravity="center"
                            android:text="500"
                            android:textColor="@color/conmmd_textcolor"
                            android:textSize="@dimen/list_textsize" />

                        <ImageView
                            android:id="@+id/voice"
                            android:layout_width="@dimen/list_pic_width"
                            android:layout_height="@dimen/list_pic_height"
                            android:src="@drawable/voice" />

                        <TextView
                            android:id="@+id/amount_voice"
                            android:layout_width="@dimen/list_text_width"
                            android:layout_height="@dimen/list_text_height"
                            android:gravity="center"
                            android:paddingRight="5dip"
                            android:text="200"
                            android:textColor="@color/conmmd_textcolor"
                            android:textSize="@dimen/list_textsize" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
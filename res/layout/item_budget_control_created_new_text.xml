<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >

    <RelativeLayout
        android:id="@+id/rl_created_text_container"
        android:layout_width="match_parent"
        android:layout_height="63dp" >

        <TextView
            android:id="@+id/tv_budget_control_created_text_itle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="Name"
            android:textColor="@color/conmmd_textcolor"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_next" />

        <TextView
            android:id="@+id/tv_budget_control_created_item_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_arrow"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/conmmd_textcolor_s"
            android:textColorHint="@color/conmmd_textcolor_s"
            android:textSize="15sp" />
    </RelativeLayout>

</RelativeLayout>
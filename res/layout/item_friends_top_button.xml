<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/conmmd_tittle_white" >

    <RelativeLayout
        android:id="@+id/friends_rl_add_friends"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/conmmd_tittle_white" >

        <RelativeLayout
            android:id="@+id/friends_rl_from_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/conmmd_tittle_white"
            android:gravity="center_horizontal"
            android:paddingBottom="5dp"
            android:paddingLeft="9dp"
            android:paddingRight="28dp"
            android:paddingTop="5dp" >

            <ImageView
                android:id="@+id/friends_top_iv_portrait"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="centerInside"
                android:layout_centerVertical="true"
                android:src="@drawable/add_friends"
                android:background="@drawable/bg_portrait_shape" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/friends_top_iv_portrait"
                android:layout_marginLeft="7dp"
                android:layout_centerVertical="true"
                android:text="@string/friends_add_from_mobile_contacts"
                android:textColor="@color/conmmd_textcolor" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/bg_next" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
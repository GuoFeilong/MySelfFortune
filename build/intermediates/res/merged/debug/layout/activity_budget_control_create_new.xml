<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conmmd_background" >

    <include
        android:id="@+id/include_commond_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_title" />

    <RelativeLayout
        android:id="@+id/budget_control_create_separate"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/include_commond_title" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/commond_line_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/line_bg" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/ll_budget_control_create_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/budget_control_create_separate"
        android:orientation="vertical" >

        <include
            android:id="@+id/il_new_text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/item_budget_control_created_new_text" />

        <include
            android:id="@+id/il_new_image_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/item_budget_control_created_new_image" />

        <include
            android:id="@+id/il_new_text_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/item_budget_control_created_new_text" />

        <include
            android:id="@+id/il_new_text_budget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/item_budget_control_created_new_text" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ll_budget_control_create_header" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true" >

            <Button
                android:id="@+id/bt_budget_create_new_submit"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_green_selector"
                android:text="@string/button_submit"
                android:textColor="@color/conmmd_text_green_button_color"
                android:textSize="17sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/activity_budget_control_create_new.xml -->
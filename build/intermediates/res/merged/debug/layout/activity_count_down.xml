<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_coin_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/include_commond_title"
        layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_commond_title"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_paomadeng"
                android:layout_width="125dp"
                android:layout_height="25dp"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/bg_budget_value"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="倒计时textsview展示继承Textview里面封装一个runnable线程,进行倒计时展示,透漏一个接口出来封装start和stop的方法"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="10sp" />

            <com.guofeilong.fortune.ui.view.CountDownTextView
                android:id="@+id/tv_countdowm1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_demo_circle3"
                android:gravity="center"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title_2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <com.guofeilong.fortune.ui.view.CountDownTextView
                android:id="@+id/tv_countdowm2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_demo_circle4"
                android:gravity="center"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title_2" />

            <com.guofeilong.fortune.ui.view.CountDownTextView
                android:id="@+id/tv_countdowm3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_demo_circle5"
                android:gravity="center"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title_2" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/activity_count_down.xml -->
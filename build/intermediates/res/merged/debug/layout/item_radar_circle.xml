<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:visibility="visible" >

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >

        <ImageView
            android:id="@+id/exchange_portrait_bg"
            android:layout_width="@dimen/exchange_portrait_bg"
            android:layout_height="@dimen/exchange_portrait_bg"
            android:background="@drawable/bg_circle_radar" />

        <com.asiainfo.rtss.ui.view.CircleImageView
            android:id="@+id/exchange_iv_portrait"
            android:layout_width="@dimen/exchange_portrait"
            android:layout_height="@dimen/exchange_portrait"
            android:layout_gravity="center"
            android:src="@drawable/default_portrait"
            android:visibility="visible" />
    </FrameLayout>

    <TextView
        android:id="@+id/exchange_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/conmmd_textcolor"
        android:visibility="visible" />

</LinearLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/item_radar_circle.xml -->
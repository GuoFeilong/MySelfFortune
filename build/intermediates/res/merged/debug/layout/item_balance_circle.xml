<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <FrameLayout
            android:layout_width="@dimen/moblie_usage_circle_diameter"
            android:layout_height="@dimen/moblie_usage_circle_diameter"
            android:gravity="center_horizontal" >

            <com.asiainfo.rtss.ui.view.RoundProgressBar
                android:id="@+id/data_circle"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

                <TextView
                    android:id="@+id/tv_data_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/moblie_usage_circle_font_num_top_margin"
                    android:text="750"
                    android:textColor="@color/qingse"
                    android:textSize="@dimen/moblie_usage_circle_font_title" />

                <TextView
                    android:id="@+id/tv_data_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_data_num"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/moblie_usage_circle_unit_top"
                    android:text="MBs left"
                    android:textColor="@color/qingse"
                    android:textSize="@dimen/moblie_usage_circle_font_unit" />

                <TextView
                    android:id="@+id/tv_data_remain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/moblie_usage_circle_total_bottom"
                    android:text="100MBs"
                    android:textColor="@color/conmmd_textcolor"
                    android:textSize="@dimen/moblie_usage_circle_font_unit" />
            </RelativeLayout>
        </FrameLayout>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text=""
            android:maxLines="2"
            android:textColor="@color/qingse"
            android:textSize="@dimen/moblie_usage_circle_font_subtitle" />
    </LinearLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/item_balance_circle.xml -->
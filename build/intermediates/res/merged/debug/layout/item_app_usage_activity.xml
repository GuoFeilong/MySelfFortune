<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/item_app_usage_activity_tv_time"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="1/Jun"
            android:textColor="@color/conmmd_textcolor"
            android:textSize="12sp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/item_app_usage_activity_iv_ico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:background="@drawable/app_chrome" />

        <TextView
            android:id="@+id/item_app_usage_activity_tv_name"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:gravity="center_vertical"
            android:text="YouTube"
            android:textColor="@color/conmmd_textcolor"
            android:textSize="12sp" />

        <com.asiainfo.rtss.ui.view.MyProgressBar
            android:id="@+id/item_app_usage_activity_myprogressbar"
            android:layout_width="0dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_app_usage_activity_tv_data"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:layout_marginRight="8dp"
            android:drawablePadding="-10dp"
            android:drawableRight="@drawable/bg_next1"
            android:gravity="center_vertical|right"
            android:text="28.24MB"
            android:textColor="@color/data_usage_color_yellow"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/commond_line_height"
        android:layout_alignParentBottom="true"
        android:background="@color/conmmd_line" />

</RelativeLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/item_app_usage_activity.xml -->
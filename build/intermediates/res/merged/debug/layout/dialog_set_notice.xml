<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/budet_dialog_width"
    android:layout_height="@dimen/budet_dialog_notice_height"
    android:background="@drawable/bg_set_budget_dialog"
    android:orientation="vertical"
    android:weightSum="2" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1" >

        <TextView
            android:id="@+id/tv_budget_notice_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Budget successfully set!"
            android:textColor="@color/conmmd_black"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="@color/conmmd_darkgray" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_budget_notice_ok"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.9"
        android:clickable="true" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="OK"
            android:textColor="#4a79fe"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/dialog_set_notice.xml -->
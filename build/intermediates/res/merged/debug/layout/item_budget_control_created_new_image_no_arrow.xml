    android:layout_height="wrap_content"
    android:background="@color/conmmd_lightgray" >

    <RelativeLayout
        android:id="@+id/rl_created_image_noarrow_container"
        android:layout_width="match_parent"
        android:layout_height="63dp" >

        <TextView
            android:id="@+id/tv_budget_control_created_imagetitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:text="Photo"
            android:textColor="@color/conmmd_textcolor"
            android:textSize="15sp" />

        <com.asiainfo.rtss.ui.view.CircleImageView

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conmmd_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_commond_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_title" />

    <RelativeLayout
        android:id="@+id/rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_commond_title"
        android:background="@color/conmmd_very_lightgray" >

        <RelativeLayout
            android:id="@+id/rl_userinfo"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="20dp"
            android:background="@color/conmmd_background" >

            <RelativeLayout
                android:id="@+id/rl_photo"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/im_line"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/commond_line_height"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/conmmd_line" />

                <ImageView
                    android:id="@+id/im_services"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/profile_photo" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/im_services"
                    android:text="@string/usercenter_profile_photo"
                    android:textColor="@color/conmmd_textcolor"
                    android:textSize="@dimen/set_left_title" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/commond_line_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/conmmd_line" />

                <ImageView
                    android:id="@+id/recovery_online_data"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/bg_next1" />

                <com.asiainfo.rtss.ui.view.CircleImageView
                    android:id="@+id/home_user_icon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="5dp"
                    android:layout_toLeftOf="@id/recovery_online_data"
                    android:src="@drawable/default_portrait" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/usercenter_item_hight"
                android:layout_below="@id/rl_photo"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/name_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/name" />

                <TextView
                    android:id="@+id/name_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/name_label"
                    android:text="@string/usercenter_name"
                    android:textColor="@color/conmmd_textcolor"
                    android:textSize="@dimen/set_left_title" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/commond_line_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/conmmd_line" />

                <TextView
                    android:id="@+id/myname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@id/name_field"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:singleLine="true"
                    android:text="Paul"
                    android:textColor="#848b8f"
                    android:textSize="@dimen/set_left_title" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_photo_namber"
                android:layout_width="match_parent"
                android:layout_height="@dimen/usercenter_item_hight"
                android:layout_below="@id/rl_name"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/phonenumber_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/phone_number" />

                <TextView
                    android:id="@+id/phonenumber_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/phonenumber_label"
                    android:text="@string/usercenter_phone_number"
                    android:textColor="@color/conmmd_textcolor"
                    android:textSize="@dimen/set_left_title" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/commond_line_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/conmmd_line" />

                <TextView
                    android:id="@+id/tv_myphone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:text="080678837"
                    android:textColor="@color/conmmd_textcolor"
                    android:textSize="@dimen/set_left_title" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_current_account"
                android:layout_width="match_parent"
                android:layout_height="@dimen/usercenter_item_hight"
                android:layout_below="@id/rl_photo_namber"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/curr_account_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/phone_number" />

                <TextView
                    android:id="@+id/curr_account_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/curr_account_label"
                    android:text="@string/usercenter_current_account"
                    android:textColor="@color/conmmd_textcolor"
                    android:textSize="@dimen/set_left_title" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/commond_line_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/conmmd_line" />

                <ImageView
                    android:id="@+id/icon_current_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/bg_next1" />

                <TextView
                    android:id="@+id/tv_current_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/curr_account_field"
                    android:layout_alignBottom="@+id/curr_account_field"
                    android:layout_toLeftOf="@+id/icon_current_account"
                    android:text="7008356"
                    android:textColor="@color/conmmd_textcolor"
                    android:textSize="@dimen/set_left_title" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_change_psw"
                android:layout_width="match_parent"
                android:layout_height="@dimen/usercenter_item_hight"
                android:layout_below="@id/rl_current_account"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/password_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/change_password" />

                <TextView
                    android:id="@+id/password_field"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="8dp"
                    android:layout_toRightOf="@id/password_label"
                    android:text="@string/usercenter_change_password"
                    android:textColor="@color/conmmd_textcolor"
                    android:textSize="@dimen/set_left_title" />

                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/commond_line_height"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:background="@color/conmmd_line" />

                <ImageView
                    android:id="@+id/icon_change_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:gravity="center_vertical"
                    android:src="@drawable/bg_next1" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_service"
            android:layout_width="match_parent"
            android:layout_height="@dimen/usercenter_item_hight"
            android:layout_below="@id/rl_userinfo"
            android:layout_marginTop="20dp"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/myplan_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:src="@drawable/services" />

            <TextView
                android:id="@+id/myplan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/myplan_label"
                android:text="@string/usercenter_my_plans"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title" />

            <ImageView
                android:id="@+id/show_myplan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:src="@drawable/bg_next1" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/conmmd_line" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_myhistory"
            android:layout_width="match_parent"
            android:layout_height="@dimen/usercenter_item_hight"
            android:layout_below="@id/rl_service"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/about_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:src="@drawable/bg_about" />

            <TextView
                android:id="@+id/myhistory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/about_label"
                android:text="@string/usercenter_myhistory"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title" />

            <ImageView
                android:id="@+id/show_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:src="@drawable/bg_next1" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_myfavorites"
            android:layout_width="match_parent"
            android:layout_height="@dimen/usercenter_item_hight"
            android:layout_below="@id/rl_myhistory"
            android:background="@color/white"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/myfavorites_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:src="@drawable/bg_about" />

            <TextView
                android:id="@+id/myfavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/myfavorites_label"
                android:text="@string/usercenter_myfavorites"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title" />

            <ImageView
                android:id="@+id/show_myfavorites"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:gravity="center_vertical"
                android:src="@drawable/bg_next1" />

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/rl_myfavorites"
            android:layout_centerInParent="true" >

            <Button
                android:id="@+id/button_logout"
                android:layout_width="0dp"
                android:layout_height="45dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_weight="1"
                android:background="@drawable/button_yellow_selector"
                android:text="@string/button_usercenter_loginout"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/activity_user_center.xml -->
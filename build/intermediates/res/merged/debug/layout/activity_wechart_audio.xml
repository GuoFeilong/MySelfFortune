<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_coin_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/include_commond_title"
        layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_commond_title"
        android:background="@color/white"
        android:orientation="vertical" >

        <ListView
            android:id="@+id/lv_audio_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:divider="@null"
            android:overScrollMode="never"
            android:scrollbars="none" >
        </ListView>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/conmmd_line" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.guofeilong.fortune.ui.view.AudioRecorderButton
                android:id="@+id/audio_button"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/bg_audio_button_normal"
                android:text="@string/state_normal"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title" >
            </com.guofeilong.fortune.ui.view.AudioRecorderButton>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/activity_wechart_audio.xml -->
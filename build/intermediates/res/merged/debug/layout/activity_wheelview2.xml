<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_coin_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/include_commond_title"
        layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_commond_title"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="3">


        <TextView
            android:id="@+id/tvTime"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="50dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="时间" />

        <TextView
            android:id="@+id/tvOptions"
            android:layout_width="match_parent"

            android:layout_height="50dp"
            android:padding="@dimen/activity_horizontal_margin"
            android:text="条件" />


        <RelativeLayout
            android:layout_width="80dp"
            android:layout_height="220dp"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/tv_text"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_alignParentBottom="true"
                android:background="#51c7ee"
                android:clickable="true"
                android:gravity="center"
                android:text="活跃+1"
                android:textColor="#ffffff"
                android:textSize="11sp"
                android:visibility="visible" />

            <!--修改textsize动画执行-->
            <TextView
                android:id="@+id/tv_animaiton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerInParent="true"
                android:clickable="true"
                android:gravity="center"
                android:text="活跃+1"
                android:textColor="#51c7ee"
                android:textSize="11sp"
                android:visibility="invisible" />


        </RelativeLayout>


        <TextView
            android:id="@+id/tv_test"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:background="#51bbae"
            android:clickable="true"
            android:gravity="center"
            android:text="十二号字体"
            android:textColor="#ffffff"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/tv_long"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp" />
        <TextView
            android:id="@+id/tv_short"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textSize="12sp" />


    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/activity_wheelview2.xml -->
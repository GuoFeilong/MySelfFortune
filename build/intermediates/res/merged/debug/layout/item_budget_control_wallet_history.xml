<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/conmmd_lightgray" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="63dp" >

        <com.asiainfo.rtss.ui.view.CircleImageView
            android:id="@+id/civ_wallet_history_portrait"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/default_portrait" />

        <RelativeLayout
            android:id="@+id/rl_wallet_name_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/civ_wallet_history_portrait" >

            <TextView
                android:id="@+id/tv_wallet_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sadam"
                android:textColor="@color/conmmd_textcolor" />

            <TextView
                android:id="@+id/tv_wallet_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_wallet_name"
                android:text="8768760998"
                android:textColor="@color/conmmd_textcolor_s"
                android:textSize="12sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_wallet_data_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/rl_wallet_name_details" >

            <TextView
                android:id="@+id/tv_wallet_data_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Data 50 MB"
                android:textColor="@color/conmmd_textcolor" />

            <TextView
                android:id="@+id/tv_wallet_data_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_wallet_data_name"
                android:text="03/12/2014"
                android:textColor="@color/conmmd_textcolor_s"
                android:textSize="12sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_wallet_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="â‚¬100"
            android:textColor="@color/conmmd_button_green"
            android:textSize="15sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/commond_line_height"
            android:layout_alignParentBottom="true"
            android:background="@drawable/line_bg" />
    </RelativeLayout>


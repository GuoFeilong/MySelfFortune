<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_coin_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <include
        android:id="@+id/include_commond_title"
        layout="@layout/view_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/include_commond_title"
        android:background="@color/white"
        android:orientation="vertical"
        android:weightSum="2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tv_show_meituan"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:background="@drawable/button_yellow_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="扇形菜单"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title" />

            <com.guofeilong.fortune.ui.view.PathAnimMenu
                android:id="@+id/pathmenu"
                android:layout_width="130dp"
                android:layout_height="180dp"
                android:layout_centerInParent="true"
                android:background="@color/transparent" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/conmmd_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/commond_line_height"
                android:layout_alignParentBottom="true"
                android:background="@color/conmmd_line" />

            <TextView
                android:id="@+id/TextView02"
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/button_yellow_selector"
                android:clickable="true"
                android:gravity="center"
                android:text="滚动的数字"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title" />

            <com.guofeilong.fortune.ui.view.NumberBeatTextView
                android:id="@+id/tv_beat_num1"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="11dp"
                android:background="@drawable/bg_demo_circle8"
                android:gravity="center"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title_2" />

            <com.guofeilong.fortune.ui.view.NumberBeatTextView
                android:id="@+id/tv_beat_num2"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:background="@drawable/bg_demo_circle3"
                android:gravity="center"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title_2" />

            <com.guofeilong.fortune.ui.view.NumberBeatTextView
                android:id="@+id/tv_beat_num3"
                android:layout_width="85dp"
                android:layout_height="85dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/bg_demo_circle6"
                android:gravity="center"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="@dimen/set_left_title_2" />

            <TextView
                android:id="@+id/tv_change_num"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_below="@id/tv_beat_num2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:background="@drawable/bg_demo_circle5"
                android:gravity="center"
                android:text="Change"
                android:textColor="@color/conmmd_textcolor"
                android:textSize="10sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/activity_setellite_menu.xml -->
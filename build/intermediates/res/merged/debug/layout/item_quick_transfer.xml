<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@color/transparent"
    android:orientation="horizontal"
    android:padding="9dp" >

    <com.asiainfo.rtss.ui.view.MyCircleImage
        android:id="@+id/q_transfer_iv_portrait"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:background="@drawable/bg_portrait_shape"
        android:src="@drawable/default_portrait" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/q_transfer_iv_portrait"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/item_q_transfer_tv_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/conmmd_textcolor" />

        <TextView
            android:id="@+id/item_q_transfer_tv_friend_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/conmmd_textcolor" />
    </LinearLayout>

    <CheckBox
        android:id="@+id/item_q_transfer_cb_select_contacts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/CustomCheckboxTheme"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:visibility="gone" />

</RelativeLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/item_quick_transfer.xml -->
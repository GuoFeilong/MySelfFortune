<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/conmmd_background"
    android:orientation="vertical" >

    <include
        android:id="@+id/include_commond_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/view_title" />

    <RelativeLayout
        android:id="@+id/rl_geduan"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_below="@id/include_commond_title"
        android:background="@color/conmmd_very_lightgray" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/commond_line_height"
            android:layout_alignParentBottom="true"
            android:background="@color/conmmd_line" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/data_usage_setting_activity_ll_starttime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="60dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="Start Time:"
            android:textColor="@color/conmmd_textcolor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/activity_app_usagesetting_tv_starttime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="18dp"
            android:text="2015-01-01"
            android:textColor="@color/data_usage_setting_color"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/commond_line_height"
        android:background="@color/conmmd_line" />

    <LinearLayout
        android:id="@+id/data_usage_setting_activity_ll_endtime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:minHeight="60dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="End Time"
            android:textColor="@color/conmmd_textcolor"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/activity_app_usagesetting_tv_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginTop="18dp"
            android:text="2015-03-01"
            android:textColor="@color/data_usage_setting_color"
            android:textSize="14sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/commond_line_height"
        android:background="@color/conmmd_line" />

</LinearLayout><!-- From: file:/Users/jsion/AndroidStudioPersonal/MySelfFortune/res/layout/activity_app_usage_setting.xml -->